<h1>user_profile#show</h1>
<h2>user_profile/:id</h2>

<% provide(:title, "Edit Profile Pages") %>
<div>
  <h1>自己紹介を編集する</h1>
  <div class="mb-3">
    <%= form_with(model: @user) do |form| %>
      <%= form.label "自己紹介" %>
      <%= form.text_area :self_introduction, class: "form-control" %>
      <br>
      <%= form.submit "自己紹介文を確定する", class: "btn btn-primary" %>
    <% end %>
  </div>
  <br>
</div>
